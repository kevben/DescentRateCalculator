<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nitroja.kbennett.drcmodule">

    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivityModule"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.nitroja.kbennett.CreateProfile"
            android:label="@string/title_activity_create_profile"
            android:parentActivityName=".MainActivityModule"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nitroja.kbennett.drcmodule.MainActivityModule" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.nitroja.kbennett.SavedProfile"
            android:label="@string/title_activity_saved_profile"
            android:parentActivityName=".MainActivityModule"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nitroja.kbennett.drcmodule.MainActivityModule" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".PlaneProfile"
            android:label="@string/title_activity_plane_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
